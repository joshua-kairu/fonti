<!-- ScrollView to show the words in different scales -->

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    >

    <!-- LinearLayout to hold the all the words -->

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:paddingLeft="@dimen/layout_padding"

        android:paddingRight="@dimen/layout_padding"

        android:paddingTop="@dimen/layout_padding"

        android:paddingBottom="@dimen/layout_padding"

        android:orientation="vertical"

        tools:context=".MainActivityFragment"

        tools:showIn="@layout/activity_main"

        >

        <!-- LinearLayout to hold the display 4 words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/display4"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_display4"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                style="@style/TextAppearance.AppCompat.Display4"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the display 3 words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/display3"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_display3"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                style="@style/TextAppearance.AppCompat.Display3"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the display 2 words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/display2"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_display2"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                style="@style/TextAppearance.AppCompat.Display2"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the display 1 words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/display1"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

