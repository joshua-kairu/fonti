                style="@style/TextAppearance.AppCompat.Title"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the subhead words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

