                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_body2"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                style="@style/TextAppearance.AppCompat.Body2"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the body 1 words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/body1"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_body1"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                style="@style/TextAppearance.AppCompat.Body1"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the caption words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/caption"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_caption"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                style="@style/TextAppearance.AppCompat.Caption"

                />

        </LinearLayout>

        <!-- LinearLayout to hold the button words -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView for the kind of word -->

            <TextView

                android:text="@string/button"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/label"

                />

            <!-- TextView for the Hello World -->

            <TextView

                android:id="@+id/fm_tv_button"

                android:text="@string/hello_world"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

